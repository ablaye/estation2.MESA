#
#	Define a class for logging error file to console and file
#
#

import logging 


# Create loggers
logger = logging.getLogger('simple_ex') 
logger.setLevel(logging.DEBUG)

# Create handler
consoleHandler = logging.StreamHandler()
consoleHandler.setLevel(logging.DEBUG)

# Create formatter
cHformatter = logging.Formatter('%(asctime)s - %(name)s - %(levelname)s - %(message)s')

# Add formatter to handler
consoleHandler.setFormatter(cHformatter)

# Add handler to logger
logger.addHandler(consoleHandler)

def output_info(message):
	self.logger.info(message)

